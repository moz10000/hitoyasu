<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= form_with model: @room do |f| %>
    <table>
        <tr>
            <th><%= f.label :name ,"施設名" %></th>
            <td><%= f.text_field :name %></td>
        </tr>

        <tr>
            <th><%= f.label :intro ,"施設詳細" %></th>
            <td><%= f.text_field :intro %></td>
        </tr>

        <tr>
            <th><%= f.label :price ,"料金" %></th>
            <td><%= f.text_field :price %></td>
        </tr>

        <tr>
            <th><%= f.label :area ,"住所" %></th>
            <td><%= f.text_field :area %></td>
        </tr>

        <tr>
            <th><%= f.label :image_name ,"施設画像" %></th>
            <td><%= f.text_area :image_name %></td>
        </tr>
    </table>

    <div>
        <ul>
            <li><%= f.submit "登録完了する"%></li>
            <li><%= link_to "スケジュール一覧に戻る", :rooms %></li>
        </ul>
    </div>
<% end %>